<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    ripple:rv_type="rectangle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_history"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/seek_history"/>

    <TextView
        android:id="@+id/tv_seek_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="18dp"
        android:paddingTop="18dp"
        android:layout_toRightOf="@+id/iv_history"
        android:layout_marginStart="20dp"
        android:textColor="@color/white_blue"
        android:textSize="16sp"
        android:text="周杰伦"
        />

    <ImageView
        android:id="@+id/iv_history_delete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/delete"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
</com.andexert.library.RippleView>